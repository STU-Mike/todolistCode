<!--index.wxml-->
<view class="page">
        <view class="weui-cells weui-cells_after-title"></view>
        <view class="page__title">任务详情</view>
         <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell">
                <view class="weui-cell__bd">任务名：{{name}}</view>
              
          </view>
          <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell">
                <view class="weui-cell__bd">任务内容：{{detail}}</view>
            </view>
          </view>
           <view class="weui-cells weui-cells_after-title"></view>
                <view style="margin-left:16px" class="weui-article__title">标签：{{label}}</view>
                 <view class="weui-cells weui-cells_after-title"></view>
                <view class="weui-article__section">
                    
                <view>
                 <button   class="weui-btn {{showbtn?'show':'hi'}}"  type="primary" bindtap="finishtask"  >完成任务</button>
                </view>

               </view>
               <button class="weui-btn" type="warn" bindtap="deletetask">删除任务</button>
      </view>
          
</view>
